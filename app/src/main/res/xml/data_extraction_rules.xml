<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive user data from cloud backup -->
        <exclude domain="sharedpref" path="user_preferences.xml" />
        <exclude domain="database" path="onelove_database" />
        <exclude domain="file" path="images" />
    </cloud-backup>
    <device-transfer>
        <!-- Exclude sensitive user data from device transfer -->
        <exclude domain="sharedpref" path="user_preferences.xml" />
        <exclude domain="database" path="onelove_database" />
        <exclude domain="file" path="images" />
    </device-transfer>
</data-extraction-rules>