<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OneLove" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/gray_900</item>
        
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/gray_900</item>
        
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    
    <style name="Theme.OneLove.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.OneLove.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.OneLove</item>
    </style>
</resources>