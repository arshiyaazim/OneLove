<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OneLove" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/on_primary_container</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/on_secondary_container</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Tertiary brand colors -->
        <item name="colorTertiary">@color/tertiary_light</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Theme.OneLove" parent="Base.Theme.OneLove" />
    
    <!-- SplashScreen theme. -->
    <style name="Theme.OneLove.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.OneLove</item>
    </style>
</resources>